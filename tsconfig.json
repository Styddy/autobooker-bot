{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "strictFunctionTypes": false,
    "lib": ["es2017"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/locales/*.json"]
}
