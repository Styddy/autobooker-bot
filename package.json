{
  "name": "autobooker",
  "version": "1.0.0",
  "description": "With this bot you will no longer have any problems with bookings!",
  "author": "Manuel Stella",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run lint && npm run build-ts",
    "serve": "NODE_ENV=production pm2 start --name 'Autobooker' dist/bot.js",
    "watch-node": "nodemon dist/bot.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "debug": "npm run watch-debug",
    "serve-debug": "nodemon src/bot.ts",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run serve-debug\""
  },
  "dependencies": {
    "date-fns": "^3.2.0",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "telegraf": "^4.15.3",
    "telegraf-i18n": "^6.6.0",
    "telegraf-session-local": "^2.1.1",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^10.17.60",
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "^2.6.9",
    "@types/string-similarity": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/eslint-plugin-tslint": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^46.9.1",
    "eslint-plugin-n": "^16.5.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.0.2",
    "prettier": "2.8.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
